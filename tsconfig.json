{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "outDir": "./dist",
        "target": "esnext",
        "module": "commonjs",
        "noImplicitAny": true,
        "lib": ["esnext", "dom"],
        "resolveJsonModule": true,
        "declaration": true,
        "strict": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "esModuleInterop": true
    },
    "include": ["src/**/*"]
}
